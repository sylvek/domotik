CREATE CONTINUOUS QUERY outside ON domotik BEGIN SELECT mean(value) AS value INTO domotik.infinite.daily_temp_outside FROM domotik.autogen.sensors WHERE "name" = 'esp12e' GROUP BY time(1d) END
CREATE CONTINUOUS QUERY inside ON domotik BEGIN SELECT mean(value) AS value INTO domotik.infinite.daily_temp_inside FROM domotik.autogen.sensors WHERE ("name" = 'esp8266' OR "name" = 'esp32') GROUP BY time(1d) END
CREATE CONTINUOUS QUERY sumPerDay ON domotik BEGIN SELECT sum(value) AS value INTO domotik.infinite.daily_power_consumption FROM domotik.autogen.measures WHERE "name" = 'meanPerHour' GROUP BY time(1d) END